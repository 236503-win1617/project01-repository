
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animal1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/lion"
        android:onClick="checkNum"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animal2"
        android:src="@drawable/turtle"
        android:onClick="checkNum"
        android:layout_above="@+id/fab_prev"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animal3"
        android:src="@drawable/panda"
        android:layout_alignTop="@+id/animal1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="checkNum"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animal4"
        android:src="@drawable/giraffe"
        android:onClick="checkNum"
        android:layout_above="@+id/fab_next"
        android:layout_alignRight="@+id/fab_next"
        android:layout_alignEnd="@+id/fab_next" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numbersPlayAgain"
        android:textColor="#00f"
        android:src="@drawable/playagain"
        android:layout_below="@+id/animal1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="initNums"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numbersPlayAgain"
        android:textColor="#00f"
        android:src="@drawable/sayagain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="sayNum"
        android:id="@+id/imageButton" />

    <ImageView
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@android:drawable/ic_media_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/fab_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@android:drawable/ic_media_previous"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    android:id="@+id/button2"

</RelativeLayout>
