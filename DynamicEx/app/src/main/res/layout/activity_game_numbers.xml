<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/number4"
        android:onClick="checkNum"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num2"
        android:src="@drawable/number0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="checkNum"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num3"
        android:src="@drawable/number7"
        android:layout_alignTop="@+id/num1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="checkNum"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num4"
        android:layout_alignTop="@+id/num2"
        android:layout_alignRight="@+id/num3"
        android:layout_alignEnd="@+id/num3"
        android:src="@drawable/number2"
        android:onClick="checkNum"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numbersPlayAgain"
        android:textColor="#00f"
        android:src="@drawable/playagain"
        android:layout_below="@+id/num1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="initNums" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numbersPlayAgain"
        android:textColor="#00f"
        android:src="@drawable/sayagain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="sayNum"/>
    <ImageView
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@android:drawable/ic_media_next"
        android:layout_alignBottom="@+id/num4"
        android:layout_alignRight="@+id/num4"
        android:layout_alignEnd="@+id/num4" />

    <ImageView
        android:id="@+id/fab_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@android:drawable/ic_media_previous"
        android:layout_alignBottom="@+id/num2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    android:id="@+id/button2"

</RelativeLayout>
