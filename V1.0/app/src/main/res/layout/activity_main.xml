<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#d9daf2">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_button"
        android:textColor="#00f"
        android:src="@drawable/number_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="GameNumbers"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animals_button"
        android:layout_below="@+id/number_button"
        android:src="@drawable/animal_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="GameAnimals"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animals_button"
        android:id="@+id/color_button"
        android:textColor="#00f"
        android:src="@drawable/color_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="GameColors"/>

</RelativeLayout>
